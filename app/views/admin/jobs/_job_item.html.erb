<li class="list-group-item">
  <span class="job_status"><%= job_status(job) %></span>
  <span class="job_date"><%= job.updated_at %></span>
  <span class="job_title"><%= link_to(job.title, admin_job_path(job))%>
  </span>
  <span class="job_resume"><%= link_to(admin_job_resumes_path(job)) do %>
    <i class="fa fa-user-circle-o"></i>&nbsp;<%= job_resume_user_count(job) %>&nbsp;,&nbsp;
    <i class="fa fa-envelope-o"></i>&nbsp;<%= job.resumes.count %>
    <% end %></span>
  <span class="job_set">
    <% if job.is_hidden %>
    <%= link_to('发布', publish_admin_job_path(job), method: :post, class: 'btn-sm btn-success') %>
  <% else %>
    <%= link_to('隐藏', hide_admin_job_path(job), method: :post, class: 'btn-sm btn-default') %>
    <% end %>
    <%= link_to(edit_admin_job_path(job), class: 'btn btn-sm btn-default') do %>
    <i class="fa fa-cog"></i><% end %>
    <%= link_to(admin_job_path(job), method: :delete, data: {confirm:'Are you sure?'},class: 'btn btn-sm btn-danger') do%>
    <i class="fa fa-trash-o"></i><% end %>
  </span><br/>
</li>
