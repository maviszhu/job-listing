<div class='col-md-12'>
  <h2>Jobs</h2>
  <% if current_user %>
  <div>
    <%= link_to('Add a job', new_job_path, class: 'btn btn-primary pull-right') %>
  <% end %>
  </div>

  <div class='dropdown' aria-labelledby='dropdownMenuDivider'>
    <button class='dropdown-toggle btn btn-default' data-toggle='dropdown'>排序<span class='caret'></span></button>
    <ul class='dropdown-menu' role='mebu'>
      <li><%= link_to('按薪资下限排序', jobs_path(:order => 'by_wage_min')) %></li>
      <li><%= link_to('按薪资上限排序', jobs_path(:order => 'by_wage_max')) %></li>
      <li><%= link_to('按更新时间排序', jobs_path(:order => 'by_updated_at')) %></li>
    </ul>
  </div>

  <table class='table'>
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>Contact</th>
        <th>Updated_at</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>#</td>
        <td><%= link_to(job.title, job_path(job))%></td>
        <td><%= job.wage_min %></td>
        <td><%= job.wage_max %></td>
        <td><%= job.contact %></td>
        <td><%= job.updated_at %></td>
        <td>
          <% if current_user && current_user == job.user%>
          <%= link_to('Edit', edit_job_path(job), class: 'btn btn-sm btn-default') %>
          <%= link_to('Delete', job_path(job), method: :delete, data: {confirm:'Are you sure?'},class: 'btn btn-sm btn-default') %>
          <% end %>
        </td>
        <td>
          <%= link_to('投递简历',new_job_resume_path(job),class: 'btn btn-primary') %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
