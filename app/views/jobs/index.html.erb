<div class='col-md-12'>
  <h2 class='text-center'>ALL JOBS</h2>
  <div class='dropdown btn-default pull-right'>
    <button  href='#' class='dropdown-toggle' data-toggle='dropdown'>排序<b class='caret'></b></button>
    <ul class='dropdown-menu' aria-labelledby='dropdownMenuDivider'>
      <li><%= link_to('按照薪资下限排序', jobs_path(:order => 'by_wage_min')) %></li>
      <li><%= link_to('按照薪资上限排序', jobs_path(:order => 'by_wage_max')) %></li>
      <li><%= link_to('按照发表时间排序', jobs_path(:order => 'by_updated_at')) %></li>
    </ul>
  </div>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>职位</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>更新时间</th>
        <th colspan="2"></th>
      </tr>
      <tbody>
        <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.wage_min %></td>
          <td><%= job.wage_max %></td>
          <td><%= job.updated_at %></td>
          <% if current_user %>
            <td><%= link_to('Edit', edit_job_path(job), class: 'btn btn-default btn-sm') %></td>
            <td><%= link_to('Delete', job_path(job), class: 'btn btn-default btn-sm', method: :delete, data: {confirm:'Are you sure?'}) %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
